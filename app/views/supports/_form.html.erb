<%= form_with(model: @support, local: true) do |form| %>

<% if @support.errors.any? %>
    <div id="error_explanation">
      <h2><%= @support.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @support.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= image_tag @support.image.url if @support.image? %>
    <%= form.file_field :image, class: "form-control"%>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="actions">
  <%= form.submit  class: "btn btn-default btn-sm btn_green"  %>
</div>
<% end %>
</div>